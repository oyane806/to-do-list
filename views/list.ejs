<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <title>To do</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="icon" href="https://img.icons8.com/plasticine/100/000000/list.png">
</head>

<body>
    <h1>
        <%= listTitle %>
    </h1>
    <!-- Be careful with the closing tag that is not the same! -->
    <% if (kindOfDay === "Saturday" || kindOfDay === "Sunday") { %>
    <h1 style="color: #ffe5ae">
        <%= kindOfDay %> to-dos</h1>
    <% } else { %>
    <h1 style="color: #ff62a5">
        <%= kindOfDay %> to-dos</h1>
    <% } %>
    <ul>
        <% newListItems.forEach(function(item){%>
        <form action="/delete" method="post">
        <li>
            <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">
            <!-- When the checkbox is checked, it will post -->
            <span>
                <%= item.name %></span>
        </li>
        </form>
        <% }) %>
    </ul>
    <form class="" action="/" method="post">
        <input type="text" name="newItem">
        <button type="submit" name="list" value=<%=listTitle%>>+</button>
    </form>
</body>

</html>